{
   "env": {
      "browser": true,
      "es2021": true
   },
   "extends": ["airbnb-base", "prettier"],
   "overrides": [],
   "plugins": ["prettier"],
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },
   "rules": {
      "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
      "prettier/prettier": [
         "error",
         {
            "singleQuote": true,
            "tabWidth": 3,

            "arrowParens": "avoid",
            "printWidth": 100,
            "semi": true,
            "trailingComma": "es5"
         }
      ]
   }
}
